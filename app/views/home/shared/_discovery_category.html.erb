<div class="flex items-center gap-3">
  <%= image_tag icon,
      alt: path,
      loading: "lazy",
      class: "w-10 h-10 md:w-20 md:h-20 flex-shrink-0" %>
  <%= link_to tag,
      discover_taxonomy_url(path, tags: tag, host: DISCOVER_DOMAIN),
      class: "px-4 py-2 bg-white rounded-full text-lg md:text-2xl font-medium text-black border border-black no-underline hover:-translate-x-1 hover:-translate-y-1 hover:shadow-[4px_4px_0_0_#000000] transition-all whitespace-nowrap" %>
</div>
